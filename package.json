{
  "name": "interval-scheduling",
  "version": "1.0.4",
  "description": "Efficient interval scheduling and optimization algorithms with TypeScript support",
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "keywords": [
    "interval",
    "scheduling",
    "algorithm",
    "optimization",
    "greedy",
    "typescript",
    "resource-allocation",
    "timeline"
  ],
  "author": "elzup",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs && echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
    "build:esm": "tsc --module esnext --outDir lib/esm --moduleResolution node --allowSyntheticDefaultImports",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir lib/types",
    "clean": "rimraf lib",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "oxlint src",
    "lint:fix": "oxlint src --fix",
    "benchmark": "node benchmarks/performance.js",
    "docs": "typedoc src/index.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "oxlint": "^1.18.0",
    "rimraf": "^5.0.0",
    "typedoc": "^0.24.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elzup/interval-scheduling.git"
  },
  "bugs": {
    "url": "https://github.com/elzup/interval-scheduling/issues"
  },
  "homepage": "https://github.com/elzup/interval-scheduling#readme"
}
